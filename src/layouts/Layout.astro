---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="IXSY - Internet Exchange Service Yucatán" />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white">
    <NavBar />
    <div class="pt-16">
      <slot />
    </div>
    
    <footer class="text-white py-8">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">IXSY</h3>
            <p class="text-gray-400">Internet Exchange Service Yucatán</p>
          </div>
          
          <div>
            <h3 class="text-xl font-bold mb-4">Contacto</h3>
            <p class="text-gray-400">info@ixsy.mx</p>
            <p class="text-gray-400">Mérida, Yucatán, México</p>
          </div>
          
          <div>
            <h3 class="text-xl font-bold mb-4">Síguenos</h3>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white">
                <span class="sr-only">Facebook</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <!-- SVG para Facebook -->
                </svg>
              </a>
              <!-- Agregar íconos para otras redes sociales -->
            </div>
          </div>
        </div>
        
        <div class="  pt-6 text-center text-gray-400 bg-opacity-70 py-16">
          <p>&copy; 2025 IXSY. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>