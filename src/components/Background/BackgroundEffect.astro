<div class="bgfx">
  <div class="cursor-glow" id="cursor-glow"></div>
</div>

<script>
  const glow = document.getElementById("cursor-glow");
  if (glow) {
    document.addEventListener("mousemove", (e) => {
      glow.style.left = `${e.clientX}px`;
      glow.style.top = `${e.clientY}px`;
    });
  }
</script>

<style>
  /* Contenedor del efecto: ocupa la pantalla y va detrás del contenido */
  .bgfx {
    position: fixed;
    inset: 0;
    z-index: 0; /* detrás del contenido normal */
    pointer-events: none;
    background: #000; /* fondo negro real */
    overflow: hidden;
  }

  /* Glow verde que sigue al cursor */
  .cursor-glow {
    position: absolute;
    width: 600px;
    height: 600px;
    margin-left: -300px;
    margin-top: -300px;
    background: radial-gradient(
      circle,
      rgba(0, 230, 211, 0.85) 0%,
      rgba(0, 230, 211, 0.45) 30%,
      rgba(0, 230, 211, 0.18) 55%,
      transparent 80%
    );
    filter: blur(35px);
  }
</style>
