<div class="background-container">
  <div class="cursor-glow" id="cursor-glow"></div>
</div>

<script>
  console.log('üü¢ Iniciando efecto de cursor...');
  
  const cursorGlow = document.getElementById('cursor-glow');
  
  if (cursorGlow) {
    console.log('‚úÖ Elemento cursor-glow encontrado');
    
    document.addEventListener('mousemove', (e) => {
      cursorGlow.style.left = `${e.clientX}px`;
      cursorGlow.style.top = `${e.clientY}px`;
    });
    
    console.log('‚úÖ Event listener del cursor activado');
  } else {
    console.error('‚ùå No se encontr√≥ cursor-glow');
  }
</script>

<style>
  .background-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    background: #000000;
    overflow: hidden;
    pointer-events: none;
  }
  
  .cursor-glow {
    position: absolute;
    width: 600px;
    height: 600px;
    margin-left: -300px;
    margin-top: -300px;
    background: radial-gradient(
      circle,
      rgba(0, 230, 211, 1) 0%,
      rgba(0, 230, 211, 0.6) 20%,
      rgba(0, 230, 211, 0.3) 40%,
      transparent 70%
    );
    filter: blur(40px);
    pointer-events: none;
  }
</style>