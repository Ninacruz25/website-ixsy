---
const pathname = new URL(Astro.request.url).pathname;
const isActive = (path) => {
  if (path === '/' && pathname === '/') return true;
  if (path !== '/' && pathname.startsWith(path)) return true;
  return false;
}
---

<nav class="fixed w-full z-10 mt-6">
  <div class="container mx-auto px-1">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img src="/ixsy_logo.png" alt="Logo IXSY" class="mr-1" style="height: 75px;" /> 
        </a>
      </div>
      
      <!-- Contenedor principal con bordes redondeados -->
      <div class="hidden md:block">
        <div class="bg-gray-800/80 backdrop-blur-md rounded-full">
          <div class="flex">
            <a 
              href="/" 
              class={`px-5 py-5 rounded-full text-sm font-medium transition-colors duration-200 ${isActive('/') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700/70 hover:text-white'}`}
            >
              Inicio
            </a>
            <a 
              href="/ixsy_ixe" 
              class={`px-5 py-5 rounded-full text-sm font-medium transition-colors duration-200 ${isActive('/ixsy_ixe') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700/70 hover:text-white'}`}
            >
              IXSY
            </a>
            <a 
              href="/eventos" 
              class={`px-5 py-5 rounded-full text-sm font-medium transition-colors duration-200 ${isActive('/eventos') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700/70 hover:text-white'}`}
            >
              Eventos
            </a>
            <div class="relative group">
              <button 
                class={`px-5 py-5 rounded-full text-sm font-medium transition-colors duration-200 flex items-center ${isActive('/mas') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700/70 hover:text-white'}`}
              >
                Más
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-black/80 backdrop-blur-md ring-1 ring-black ring-opacity-5 hidden group-hover:block">
                <div class="py-1">
                  <a href="/servicios" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">Servicios</a>
                  <a href="/membresia/small" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">Membresía</a>
                  <a href="/contact" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">Contacto</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button type="button" class="text-gray-300 hover:text-white focus:outline-none" id="mobile-menu-button">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3">
        <div class="bg-gray-800/80 backdrop-blur-md rounded-full">
          <div class="p-2 space-y-1">
            <a href="/" class={`block px-3 py-2 rounded-full text-base font-medium ${isActive('/') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}>
              Inicio
            </a>
            <a href="/ixsy_ixe" class={`block px-3 py-2 rounded-full text-base font-medium ${isActive('/ixsy_ixe') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}>
              IXSY
            </a>
            <a href="/eventos" class={`block px-3 py-2 rounded-full text-base font-medium ${isActive('/eventos') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}>
              Eventos
            </a>
            <a href="/servicios" class={`block px-3 py-2 rounded-full text-base font-medium ${isActive('/servicios') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}>
              Servicios
            </a>
            <a href="/membresia/small" class={`block px-3 py-2 rounded-full text-base font-medium ${isActive('/membresia') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}>
              Membresía
            </a>
            <a href="/contact" class={`block px-3 py-2 rounded-full text-base font-medium ${isActive('/contact') ? 'bg-teal-500 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}>
              Contacto
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>