---

<Layout title={content.title}>
  <!-- Hero Section -->
  <section class="relative py-20 pt-32">
    <div class="relative z-10 container mx-auto px-4">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
          {content.hero.title}
        </h1>
        <h2 class="text-3xl md:text-4xl font-bold text-teal-400">
          {content.hero.subtitle}
        </h2>
      </div>
    </div>
  </section>

  <!-- Sección de Planes de Membresía -->
  <section class="relative py-12 pb-20">
    <div class="relative z-10 container mx-auto px-4">
      <!-- Grid principal de 3 columnas para los primeros planes -->
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto mb-12"
      >
        {
          content.planes
            .slice(0, 3)
            .map((plan) => <CardMembership client:load plan={plan} />)
        }
      </div>

      <!-- Plan Socio Proveedor - Centrado y especial -->
      <div class="flex justify-center">
        <div class="max-w-md w-full">
          <CardMembership client:load plan={content.planes[3]} />
        </div>
      </div>
    </div>
  </section>

  <!-- Sección Requisitos para la Membresía -->
  <section class="relative py-16">
    <div class="relative z-10 container mx-auto px-4">
      <div class="text-center mb-16">
        <p class="text-xl text-gray-300 font-medium mb-4">REQUISITOS</p>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Requisitos para la membresía
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {
          content.requisitos.map((req) => (
            <CardRequirement client:load requirement={req} />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Sección Proceso de Membresía -->
  <section class="relative py-16">
    <div class="relative z-10 container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Proceso de membresía
        </h2>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto"
      >
        {content.proceso.map((step) => <CardProcess client:load step={step} />)}
      </div>
    </div>
  </section>

  <!-- Sección Nuestros Servicios -->
  <section class="relative py-16">
    <div class="relative z-10 container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {content.servicios.title}
        </h2>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto"
      >
        {
          content.servicios.services.map((service, index) => (
            <div
              class={
                index === content.servicios.services.length - 1
                  ? "md:col-span-2 lg:col-span-3 flex justify-center"
                  : ""
              }
            >
              <CardService
                client:load
                service={service}
                className={
                  index === content.servicios.services.length - 1
                    ? "max-w-md"
                    : ""
                }
              />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Animaciones suaves */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section > div {
    animation: fadeInUp 0.8s ease-out;
  }

  /* Efectos adicionales para las cards */
  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }
</style>
