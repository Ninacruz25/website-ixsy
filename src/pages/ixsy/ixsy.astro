---

<Layout title={content.title}>
  <!-- Agrega esto dentro de tu <head> en Layout.astro o aquí arriba -->
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

  <!-- Contenedor principal con fondo único -->
  <div 
    class="min-h-screen bg-cover bg-center"
    style="background-image: url('/IXSY.svg');"
  >
    <!-- Sección IXSY completa -->
    <section class="relative py-20 pt-32">
      <!-- Overlay oscuro para mejorar legibilidad -->
      <div class="absolute inset-0 bg-black/50 z-5"></div>
      <div class="relative z-10 container mx-auto px-4">

        <div class="text-center mb-12">
          <p class="text-xl text-white-400 font-medium mb-6">
            {content.ixsy.subtitle}
          </p>
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
            {content.ixsy.title}
          </h1>
        </div>
        
        <!-- Grid de dos columnas -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <!-- Columna izquierda - Texto e información -->
          <div class="space-y-6 text-white">
            <p class="text-lg text-gray-300 leading-relaxed">
              {content.ixsy.description}
            </p>
          </div>
          
          <!-- Columna derecha - Carrusel -->
          <div class="relative">
            <Carrucel
              images={content.ixsy.images} 
              autoplayInterval={5000}
              showThumbnails={true}
              client:load
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Sección Nodo IXP -->
     <section class="relative py-20 pt-32">
        <!-- Overlay oscuro para mejorar legibilidad -->
      <div class="absolute inset-0 bg-black/50 z-5"></div>
      <div class="relative z-10 container mx-auto px-4">

        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
            {content.node_ixp.title}
          </h1>
        </div>
        
        <!-- Grid de dos columnas -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <!-- Columna izquierda - Texto e información -->
          <div class="space-y-6 text-white">
            <p class="text-lg text-gray-300 leading-relaxed">
              {content.node_ixp.description}
            </p>
            <p class="text-lg text-gray-300 leading-relaxed">
              {content.node_ixp.description_2}
            </p>
            <p class="text-lg text-gray-300 leading-relaxed">
              {content.node_ixp.description_3}
            </p>
          </div>
          
          <!-- Columna derecha - Carrusel -->
          <div class="relative">
            <Carrucel
              images={content.ixsy.images} 
              autoplayInterval={5000}
              showThumbnails={true}
              client:load
            />
          </div>
        </div>
      </div>
     </section>

    <!-- Sección compromiso de IXSY -->
    <section class="relative py-12">
      <!-- Overlay oscuro para mejorar legibilidad -->
      <div class="absolute inset-0 bg-black/50 z-5"></div>

      <div class="relative z-10 container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h2 class="text-4xl md:text-6xl font-bold text-white mb-4">
            {content.compromiso.title}
          </h2>
          <p class="text-lg text-gray-300 leading-relaxed mb-8">
            {content.compromiso.description}
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
            <div class="bg-gray-800/50 backdrop-blur-lg rounded-lg p-6 border border-gray-700/50 hover:border-teal-500/50 transition-all duration-300 hover:transform hover:scale-105">
              <h3 class="text-xl font-bold text-teal-400 mb-4">
                {content.compromiso.pillars[0].title}
              </h3>
              <p class="text-gray-300">
                {content.compromiso.pillars[0].description}
              </p>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-lg rounded-lg p-6 border border-gray-700/50 hover:border-teal-500/50 transition-all duration-300 hover:transform hover:scale-105">
              <h3 class="text-xl font-bold text-teal-400 mb-4">
                {content.compromiso.pillars[1].title}
              </h3>
              <p class="text-gray-300">
                {content.compromiso.pillars[1].description}
              </p>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-lg rounded-lg p-6 border border-gray-700/50 hover:border-teal-500/50 transition-all duration-300 hover:transform hover:scale-105">
              <h3 class="text-xl font-bold text-teal-400 mb-4">
                {content.compromiso.pillars[2].title}
              </h3>
              <p class="text-gray-300">
                {content.compromiso.pillars[2].description}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- seccion Consejo Directivo -->
    <section class="relative py-12">
      <!-- Overlay oscuro para mejorar legibilidad -->
      <div class="absolute inset-0 bg-black/50 z-5"></div>
      <div class="relative z-10 container mx-auto px-4">
        
        <!-- Título principal centrado -->
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            {content.directivo.title}
          </h2>
        </div>

        <!-- Primera fila - Presidente (dos columnas) -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-12 max-w-6xl mx-auto">
          <!-- Columna izquierda - Imagen -->
          <div class="flex justify-center">
            <div class="relative group">
              <img 
                src={content.directivo.members[0].image}
                alt={content.directivo.members[0].name}
                class="relative w-80 h-80 object-cover rounded-lg shadow-2xl transform transition-transform duration-300 group-hover:scale-[1.05]"
              />
            </div>
          </div>
          
          <!-- Columna derecha - Información -->
          <div class="text-white space-y-4">
            <h3 class="text-3xl md:text-4xl font-bold text-white">
              {content.directivo.members[0].name}
            </h3>
            <p class="text-lg text-gray-300 leading-relaxed">
              {content.directivo.members[0].description}
            </p>
            <p class="text-xl font-semibold text-teal-400">
              {content.directivo.members[0].position}
            </p>
          </div>
        </div>

        <!-- Resto de miembros - Grid de cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
          {content.directivo.members.slice(1).map((member) => (
            <div class="bg-gray-800/50 backdrop-blur-lg rounded-lg p-6 border border-gray-700/50 hover:border-teal-500/50 transition-all duration-300 hover:transform hover:scale-105">
              <div class="text-center text-white space-y-3">
                <h4 class="text-lg font-bold text-white">
                  {member.name}
                </h4>
                <p class="text-sm text-gray-300 leading-relaxed">
                  {member.description}
                </p>
                <p class="text-sm font-semibold text-teal-400">
                  {member.position}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Sección Comité Técnico -->
    <section class="relative py-12 pb-20">
      <!-- Overlay oscuro para mejorar legibilidad -->
      <div class="absolute inset-0 bg-black/50 z-5"></div>
      <div class="relative z-10 container mx-auto px-4">
        
        <!-- Título principal centrado -->
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            {content.tecnico.title}
          </h2>
        </div>

        <!-- Grid de miembros del comité técnico -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 max-w-6xl mx-auto">
          {content.tecnico.members.map((member) => (
            <div class="bg-gray-800/50 backdrop-blur-lg rounded-lg p-6 border border-gray-700/50 hover:border-teal-500/50 transition-all duration-300 hover:transform hover:scale-105">
              <div class="text-center text-white space-y-3">
                <h4 class="text-lg font-bold text-white">
                  {member.name}
                </h4>
                <p class="text-sm text-gray-300 leading-relaxed">
                  {member.description}
                </p>
                <p class="text-sm font-semibold text-teal-400">
                  {member.position}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Animaciones suaves */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  section > div {
    animation: fadeInUp 0.8s ease-out;
  }
</style>